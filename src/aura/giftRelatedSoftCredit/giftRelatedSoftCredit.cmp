<aura:component extends="c:giftFormRelatedRow">
    <aura:attribute name="item" 
        type="npsp__Partial_Soft_Credit__c" 
        default="{sobjectType:'npsp__Partial_Soft_Credit__c'}"/>
    <aura:handler name="change" 
        value="{!v.item.npsp__Amount__c}" 
        action="{!c.handleAmountChange}"/>

    <div class="slds-grid slds-wrap">
        <div class="slds-col slds-size_2-of-4 slds-p-around_small">
            <aura:if isTrue="{!v.showLabels}">
                <label class="show-required slds-form-element__label">Contact</label>
            </aura:if>
            <force:inputField aura:id="noDuplicates"
                value="{!v.item.npsp__Contact__c}" />
        </div>
        <div class="slds-col slds-size_1-of-4 slds-p-around_small">
            <aura:if isTrue="{!v.showLabels}">
                <label class="show-required slds-form-element__label">Amount</label>
            </aura:if>
            <lightning:input aura:id="requiredField"
                onblur="{!c.handleAmountCheck}"
                name="allocationAmt" 
                type="number" 
                label="Amount" variant="label-hidden"
                formatter="currency"
                value="{!v.item.npsp__Amount__c}" />
        </div>

        <div class="slds-hidden">
            <lightning:input name="oppId" type="text" label="opp" value="{!v.item.npsp__Opportunity__c}" />
        </div>
    </div>

</aura:component>