<aura:component >
    <aura:registerEvent name="giftPicklistChangeEvent" type="c:giftPicklistChangeEvent"/>

    <aura:attribute type="String[]" name="picklistValues" />
    <aura:attribute type="String" name="auraId" />
    <aura:attribute type="String" name="fieldLabel" />
    <aura:attribute type="String" name="inputFieldId" />
    <aura:attribute type="String" name="selectedVal" />
    <aura:attribute type="Boolean" name="isDisabled" default="false" />
    <aura:attribute type="Boolean" name="isRequired" default="false" />

    <aura:handler name="change" value="{!v.selectedVal}" action="{!c.handlePicklistChange}"/>
    
    <div class="slds-col slds-size_1-of-2 slds-p-around_small">
        <lightning:select aura:id="requiredField" 
            name="select" 
            label="{!v.fieldLabel}" 
            required="{!v.isRequired}"
            disabled="{!v.isDisabled}"
            value="{!v.selectedVal}">
            <aura:iteration items="{!v.picklistValues}" var="val">
                <option value="{!val}" text="{!val}" selected="{!val == v.selectedVal}"></option>
            </aura:iteration>
        </lightning:select>
    </div>
</aura:component>