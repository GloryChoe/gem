<aura:component>
    
    <aura:registerEvent name="giftMatchChangeEvent" type="c:giftMatchChangeEvent"/>

    <aura:attribute name="objectList" type="List" />
    <aura:attribute name="optionList" type="List" default="[]" />
    <aura:attribute name="fieldsToShow" type="List" default="['Name']" />
    <aura:attribute name="selectedValue" type="String" />
    <aura:attribute name="selectedObject" type="Object" />
    <aura:attribute name="sectionLabel" type="String" />
    <aura:attribute name="idField" type="String" />
    <aura:attribute name="currentLookupValue" type="String" />
    <aura:attribute name="objectType" type="String" />
    <aura:attribute name="inputAuraId" type="String" />
    <aura:attribute name="showMatchSpinner" type="Boolean" />
    <aura:attribute name="enableChangeEvent" type="Boolean" default="false" />

    <aura:handler name="change" value="{!v.objectList}" action="{!c.handleListChange}"/>

    <aura:if isTrue="{!v.optionList.length > 0}">
    <div class="slds-col slds-size_1-of-1 slds-p-around_small radio-group">
        <lightning:radioGroup name="{!v.sectionLabel}"
            label="{!v.sectionLabel}"
            options="{!v.optionList}"
            value="{!v.selectedValue}"
            onchange="{!c.handleSelectionChange}" />
            <!-- type="button"  -->
    </div>
    </aura:if>
	
</aura:component>