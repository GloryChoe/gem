<aura:component extends="c:giftFormRelatedRow">
    <aura:attribute name="item" 
        type="npe01__OppPayment__c" 
        default="{sobjectType:'npe01__OppPayment__c'}" />

    <div class="slds-grid slds-wrap">
        <div class="slds-col slds-size_1-of-6 slds-p-around_small">
            <lightning:input aura:id="requiredField" 
                class="show-required"
                name="paymentAmt" 
                type="number" 
                label="Amount"
                formatter="currency"
                disabled="{!v.item.npsp__Percent__c ? true : false}"
                value="{!v.item.npe01__Payment_Amount__c}" />
        </div>
        <div class="slds-col slds-size_1-of-6 slds-p-around_small">
            <ui:inputDate aura:id="requiredField" 
                class="show-required"
                label="Payment Date"
                value="{!v.item.npe01__Payment_Date__c}" 
                displayDatePicker="true" />
        </div>
        <div class="slds-col slds-size_1-of-6 slds-p-around_small">
            <label class="slds-form-element__label">Payment Method</label>
            <force:inputField aura:id="requiredField" 
                class="show-required"
                value="{!v.item.npe01__Payment_Method__c}" />
        </div>
        <aura:if isTrue="{!v.item.npe01__Payment_Method__c == 'Check' || v.item.npe01__Payment_Method__c == 'Credit Card'}">        
            <div class="slds-col slds-size_2-of-6 slds-p-around_small">
                <lightning:input label="Check/Card Number"
                    class="show-required"
                    value="{!v.item.npe01__Check_Reference_Number__c}" />
            </div>
        </aura:if>
        <div class="slds-col slds-size_1-of-6 slds-p-around_small">
            <lightning:input name="paymentPaid" 
                type="checkbox" 
                label="Paid" 
                value="{!v.item.npe01__Paid__c}" />
        </div>

        <div class="slds-hidden">
            <lightning:input name="oppId" type="text" label="opp" value="{!v.item.npe01__Opportunity__c}" />
        </div>
    </div>

</aura:component>